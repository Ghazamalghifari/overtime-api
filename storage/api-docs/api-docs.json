{
    "openapi": "3.0.0",
    "info": {
        "title": "Overtime App",
        "description": "This is a sample server overtime api",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/v1",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/employees": {
            "post": {
                "tags": [
                    "Employees"
                ],
                "summary": "Create Employee",
                "description": "Create the specified employee in storage",
                "operationId": "createEmployee",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "ghazamalghifari"
                                    },
                                    "salary": {
                                        "type": "integer",
                                        "example": "2000000"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "meta": {
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/overtimes": {
            "post": {
                "tags": [
                    "Overtimes"
                ],
                "summary": "Create Overtime",
                "description": "Create the specified overtime in storage",
                "operationId": "createOvertime",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "employee_id": {
                                        "type": "integer",
                                        "example": "1"
                                    },
                                    "date": {
                                        "type": "string",
                                        "example": "2022-05-05"
                                    },
                                    "time_started": {
                                        "type": "string",
                                        "example": "15:00"
                                    },
                                    "time_ended": {
                                        "type": "string",
                                        "example": "17:00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "meta": {
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/references": {
            "get": {
                "tags": [
                    "References"
                ],
                "summary": "Get list of references",
                "description": "Returns list of references",
                "operationId": "getReferencesList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "meta": {
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": "1"
                                                    },
                                                    "code": {
                                                        "type": "string",
                                                        "example": "overtime_method"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Fixed"
                                                    },
                                                    "expression": {
                                                        "type": "number",
                                                        "example": "10000 * overtime_duration_total"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2022-05-18T08:13:31.000000Z"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2022-05-18T08:13:31.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/settings": {
            "patch": {
                "tags": [
                    "Settings"
                ],
                "summary": "Update Setting",
                "description": "Update the specified setting in storage",
                "operationId": "updateSetting",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "key": {
                                        "type": "string",
                                        "example": "overtime_method"
                                    },
                                    "value": {
                                        "type": "integer",
                                        "example": "1"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "meta": {
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object",
                                            "example": null
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}